{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "scripts"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsdx build --target node --format cjs,esm",
    "test": "tsdx test --coverage --runInBand --detectOpenHandles",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "postinstall": "node scripts/postinstall.js",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browser": {
    "fs": false,
    "child_process": false
  },
  "size-limit": [{
      "path": "dist/ligojs.cjs.production.min.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/ligojs.esm.js",
      "limit": "40 KB"
    }
  ],
  "name": "ligojs",
  "author": "Shubhendu Shekhar",
  "module": "dist/ligojs.esm.js",
  "devDependencies": {
    "@size-limit/preset-big-lib": "^5.0.2",
    "husky": "^7.0.1",
    "size-limit": "^5.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}